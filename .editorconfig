root = true

[*]
indent_style = space
indent_size = 2
tab_width = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.sh|*.bash|.bash*]
indent_style = tab
indent_size = 2
tab_width = 2

[*.yml|*.yaml]
indent_size = 1

[*.css|*.scss]
indent_size = 4
insert_final_newline = false

[*.html]
indent_style = tab
indent_size = 2
tab_width = 2
insert_final_newline = false
